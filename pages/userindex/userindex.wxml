<view>
  <!-- 用户资料框 -->
  <view class="avatar-warp">
    <view class="user-info">
      <image class="avatar" mode='aspectFill' src='{{avatar}}'></image>
      <view class="user-right-info">
        <view class="nickname">{{userName}}</view>
        <view class="motto">
          简介：{{motto}}
        </view>
      </view>
    </view>
      
  
    <view class="article-info">
      <navigator url="../follows/follows" class="article-item">
        <text class="num">{{follow_num}}</text>我针对的</navigator>
      <navigator url="../followers/followers" class="article-item">
        <text class="num">{{follower_num}}</text>针对我的</navigator>
      <view class="article-item">
        <text class="num">{{status_num}}</text>动态</view>
    </view>
  </view>
  <!-- 动态展示 -->
  <view class="container" 
wx:for="{{status}}"
wx:for-index="index1"
wx:for-item="item1">
    <!--用户动态-->
    <view class="status-group">
        <view class="user-group">
            <!-- 头像 -->
            <navigator class="avatar" target="" url="../userindex/userindex" hover-class="navigator-hover" open-type="navigate">
                <image class="" src="{{item1.avatar}}"  lazy-load="false" binderror="" bindload="">
                </image>
            </navigator>
           
           
            <!-- 头像 -->

            <view class="right-info">
                <!-- 用户名 -->
                <view class="username">
                <navigator class="" target="" url="../userindex/userindex" hover-class="navigator-hover" open-type="navigate">
                  {{item1.userName}}  
                </navigator>
                    </view>
                <!-- 用户名 -->
                <!-- 日期 -->
                <view class="time">{{item1.time}}</view>
                <!-- 日期 -->
            </view>  
        </view>

        <view class="status-content-group">
            <!-- 文本部分 -->
            <view class="content">
                <text class="{{item1.isF?'hide':'conts'}}" selectable="{{true}}" decode="{{true}}">{{item1.content}}
                </text>
                <text class="iffold" bindtap='textFold' wx:if="{{item1.isF!= null}}" data-item="{{item1}}" data-index="{{index1}}">{{item1.isF ? '展开' : '收起'}}  
                </text> 
                
            </view>
             <!-- 图片部分 -->
             <!-- 只允许1~4张图片 -->
             <view class="image-list-group"   wx:if="{{item1.imgArr.length==1}}" style='width:100%'>
                 <image wx:for='{{item1.imgArr}}' 
                 wx:for-index="index2"
                 wx:for-item="item2"
                 class="" src='{{item2}}' data-index='{{index2}}' data-item='{{item1.imgArr}}' mode="aspectFill" 
                 style='width:100%;max-height:500rpx' bindtap='handlePreviewImg'></image>  
             </view>
              <view class="image-list-group"   wx:elif="{{item1.imgArr.length>1}}" style='width:100%'>
                 <image wx:for='{{item1.imgArr}}' 
                 wx:for-index="index2"
                 wx:for-item="item2"
                class="" src='{{item2}}' data-index='{{index2}}' data-item='{{item1.imgArr}}' mode="aspectFill"
                 style='width:{{imagesSize}}px;height:{{imagesSize}}px' bindtap='handlePreviewImg'></image>  
             </view>
        </view>
        <view class="status-handle">
            <!-- 评论 -->
            <view class="comment-group">
                <image class="" src="/dongtai/comment.png" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="">
                    
                </image>评论
            </view>
            <!-- like -->
            <view class="praise-group" hover-class="none" hover-stop-propagation="false">
                <image class="" src="/dongtai/like.png" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="">
                    
                </image>Like
            </view>
        </view>
    </view>
    
</view>
</view>