page{
    background-color: #f0f0f0;
}
.container  {
    width: 100%;
    flex-wrap: nowrap;
  }

  .wrap {
    margin: 23rpx 23rpx 0;
    background: rgba(255, 255, 255, 0.99);
    border-radius: 20rpx;
    box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
    position: relative;
    z-index: 2;
  }

  .username {
      color: #0F6A7B;
  }


  .single-annoucement{
    display: flex;
  }
  
  .container  .single-comment {
    background: #fff;
    padding: 30rpx;
    padding-bottom: 10rpx;
    box-sizing: border-box;
    display: flex;
  }
  .left-part {
    display: flex;
    width: 120rpx;
  }
  .left-part .comment-avatar {
    margin-top: 20rpx;
    margin-left: 20rpx;
    width: 100%;
    height: 100rpx;
    display: flex;
  }
  .left-part .comment-avatar image {
    display: flex;
    width: 100%;
    height: 100%;
    border-radius: 7%;
  }
  .right-part {
    flex: 1;
    padding-left: 20rpx;
    flex-direction: column;
    justify-content: space-between;
    padding-bottom: 10rpx;
    margin-top: 20rpx;
  }
  .right-part .comment-username {
    font-size: 35rpx;
    padding-bottom: 3rpx;
    display: flex;
  }
  .right-part .comment-time {
    font-size: 24rpx;
    color: #656565;
    padding-bottom: 10rpx;
  }
  .right-part .commentpart {
    display: block;
    padding-top: 2rpx;
    padding-bottom: 10rpx;
    font-size: 32rpx;
  }
  .right-part .commentpart .comment-text {
    text-align: justify;
    font-size: 30rpx;
    line-height: 35rpx;
  }

  .bottom-part{
      display: inline-block;
  }
  .comment-reply {
    background: #f2f2f2;
    display: flex;
    padding-left: 0rpx;
    justify-content: flex-start;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    margin-bottom: 10rpx;
  }
  .comment-reply .reply {
    font-size: 30rpx;
    color: var(--themecolor);
  }
  .right-part .function-list {
    display: flex;
    justify-content: space-between;
    padding-top: 10rpx;
  }
  .right-part .function-list .delete-comment {
    font-size: 30rpx;
    color: var(--themecolor);
    margin-right: 50rpx;
  }
  .right-part .function-list .comment-group {
    font-size: 30rpx;
    color: var(--themecolor);
  }
  .container .commentInputView {
    width: 100%;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    box-sizing: border-box;
  }
  .container .commentInputView .commentInput {
    width: 100%;
    min-height: 40rpx;
    max-height: 120rpx;
    background-color: #fff;
    padding: 20rpx 12rpx;
    position: absolute;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    box-sizing: border-box;
  }
  .container .commentInputView .commentInput .input {
    background: var(--inputbgc);
    border-radius: 8rpx;
    width: 550rpx;
    min-height: 40rpx;
    max-height: 120rpx;
    border-width: 10rpx 20rpx;
    border-style: solid;
    border-color: var(--inputbgc);
    line-height: 40rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #333333;
    display: flex;
  }
  .container .commentInputView .commentInput .send {
    width: 100rpx;
    color: var(--themecolor);
    font-size: 34rpx;
    border: 0;
    text-align: center;
    justify-content: center;
    display: flex;
    height: 64rpx;
    line-height: 64rpx;
    background-color: #fff;
  }
  