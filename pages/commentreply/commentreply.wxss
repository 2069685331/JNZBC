.container {
  background: #f2f2f2;
}
.container .comment-area-container {
  width: 100%;
  background: #f2f2f2;
  flex-wrap: nowrap;
  margin-bottom: 50rpx;
}
.container .comment-area-container .single-comment {
  background: #fff;
  padding: 30rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  display: flex;
}
.container .comment-area-container .single-comment .left-part {
  display: flex;
  width: 80rpx;
}
.container .comment-area-container .single-comment .left-part .comment-avatar {
  width: 100%;
  height: 80rpx;
  display: flex;
}
.container .comment-area-container .single-comment .left-part .comment-avatar image {
  display: flex;
  width: 100%;
  height: 100%;
  border-radius: 7%;
}
.container .comment-area-container .single-comment .right-part {
  flex: 1;
  padding-left: 20rpx;
  flex-direction: column;
  justify-content: space-between;
  padding-bottom: 30rpx;
}
.container .comment-area-container .single-comment .right-part .comment-username {
  font-size: 35rpx;
  padding-bottom: 5rpx;
}
.container .comment-area-container .single-comment .right-part .comment-time {
  font-size: 24rpx;
  color: #656565;
  padding-bottom: 10rpx;
}
.container .comment-area-container .single-comment .right-part .commentpart {
  display: flex;
  padding-bottom: 20rpx;
}
.container .comment-area-container .single-comment .right-part .commentpart .comment-text {
  text-align: justify;
  font-size: 33rpx;
  line-height: 35rpx;
}
.container .comment-area-container .single-comment .right-part .comment-reply {
  background: #f2f2f2;
  display: flex;
  justify-content: flex-start;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  margin-bottom: 10rpx;
}
.container .comment-area-container .single-comment .right-part .comment-reply .reply {
  font-size: 30rpx;
  color: var(--themecolor);
}
.container .comment-area-container .single-comment .right-part .function-list {
  display: flex;
  justify-content: space-between;
  padding-top: 10rpx;
}
.container .comment-area-container .single-comment .right-part .function-list .delete-comment {
  font-size: 30rpx;
  color: var(--themecolor);
  margin-right: 50rpx;
}
.container .comment-area-container .single-comment .right-part .function-list .comment-group {
  font-size: 30rpx;
  color: var(--themecolor);
}
.container .reply-area-container {
  width: 100%;
  background: #f2f2f2;
  flex-wrap: nowrap;
  margin-bottom: 30rpx;
}
.container .reply-area-container .single-reply {
  background: #fff;
  padding: 30rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  display: flex;
}
.container .reply-area-container .single-reply .left-part {
  display: flex;
  width: 80rpx;
}
.container .reply-area-container .single-reply .left-part .reply-avatar {
  width: 100%;
  height: 80rpx;
  display: flex;
}
.container .reply-area-container .single-reply .left-part .reply-avatar image {
  display: flex;
  width: 100%;
  height: 100%;
  border-radius: 7%;
}
.container .reply-area-container .single-reply .right-part {
  flex: 1;
  padding-left: 20rpx;
  flex-direction: column;
  justify-content: space-between;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #c2c2c2;
}
.container .reply-area-container .single-reply .right-part .reply-username {
  font-size: 35rpx;
  padding-bottom: 5rpx;
}
.container .reply-area-container .single-reply .right-part .reply-time {
  font-size: 24rpx;
  color: #656565;
  padding-bottom: 10rpx;
}
.container .reply-area-container .single-reply .right-part .replypart {
  display: flex;
  padding-bottom: 20rpx;
}
.container .reply-area-container .single-reply .right-part .replypart .reply-text {
  text-align: justify;
  font-size: 33rpx;
  line-height: 35rpx;
}
.container .reply-area-container .single-reply .right-part .function-list {
  display: flex;
  justify-content: flex-end;
  padding-top: 10rpx;
}
.container .reply-area-container .single-reply .right-part .function-list .delete-reply {
  font-size: 30rpx;
  color: var(--themecolor);
  margin-right: 50rpx;
}
.container .commentInputView {
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  box-sizing: border-box;
}
.container .commentInputView .commentInput {
  width: 100%;
  min-height: 40rpx;
  max-height: 120rpx;
  background-color: #fff;
  padding: 20rpx 12rpx;
  position: absolute;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  box-sizing: border-box;
}
.container .commentInputView .commentInput .input {
  background: var(--inputbgc);
  border-radius: 8rpx;
  width: 550rpx;
  min-height: 40rpx;
  max-height: 120rpx;
  border-width: 10rpx 20rpx;
  border-style: solid;
  border-color: var(--inputbgc);
  line-height: 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  display: flex;
}
.container .commentInputView .commentInput .send {
  width: 100rpx;
  color: var(--themecolor);
  font-size: 34rpx;
  border: 0;
  text-align: center;
  justify-content: center;
  display: flex;
  height: 64rpx;
  line-height: 64rpx;
  background-color: #fff;
}
